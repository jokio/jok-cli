{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "noImplicitAny": false,
    "sourceMap": false,
    "declaration": true,
    "moduleResolution": "node",
    "rootDir": "src",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "lib": ["esnext"],
    "types": ["jest", "node"]
  },
  "exclude": [
    "node_modules",
    "examples",
    "dist",
    "tests",
    "templates"
  ]
}
